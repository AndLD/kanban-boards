{
    "apps": [
        {
            "name": "node-server",
            "script": "npm",
            "args": ["run", "prod"],
            "cwd": "./api",
            "instances": 1,
            "autorestart": true,
            "watch": false,
            "max_memory_restart": "1G",
            "env": {
                "NODE_ENV": "production"
            }
        },
        {
            "name": "react-app",
            "script": "npm",
            "args": ["run", "prod"],
            "cwd": "./client",
            "instances": 1,
            "autorestart": true,
            "watch": false,
            "max_memory_restart": "1G",
            "env": {
                "NODE_ENV": "production"
            }
        }
    ]
}
